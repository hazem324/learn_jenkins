pipeline {
    parameters{
        choice(name: 'VERSION', choices :['1.0', '2.0', '3.0'], description: 'Select the version to build')
        booleanParam(name: 'executeTests', defaultValue: true, description: 'Execute tests after build')
    }
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'Building...'
            }
        }

        stage('Test'){
            when{
                expression{
                    params.executeTests
                }
            } steps{
                echo 'Testing...'
            }
        }  stage('Deploy'){
            steps{
                echo('Deploying...')
                echo "version elected ${params.VERSION}"
            }
        }
    }
}